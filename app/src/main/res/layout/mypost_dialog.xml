<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Button
        android:id="@+id/btn_mypost_modfiy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수정"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/ic_modify_646464_24dp"
        android:drawableTint="#646464"/>

    <Button
        android:id="@+id/btn_mypost_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mypost_modfiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/ic_delete_black_24dp"
        android:drawableTint="#646464"/>



</androidx.constraintlayout.widget.ConstraintLayout>