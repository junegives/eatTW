<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <Button
        android:id="@+id/btn_board_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="잡담 게시판에 글쓰기"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/board_icon"
        android:drawableTint="#646464"/>

    <Button
        android:id="@+id/btn_information_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_board_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보 게시판에 글쓰기"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/information_icon"
        android:drawableTint="#646464"/>


    <Button
        android:id="@+id/btn_review_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_information_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리뷰 게시판에 글쓰기"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/review_icon"
        android:drawableTint="#646464"/>

    <Button
        android:id="@+id/btn_qna_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_review_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q&amp;A 게시판에 글쓰기"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/qna_icon"
        android:drawableTint="#646464"/>

    <Button
        android:id="@+id/btn_meeting_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_qna_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모임 게시판에 글쓰기"
        android:background="@android:color/white"
        android:paddingLeft="30dp"
        android:drawablePadding="-55dp"
        android:drawableLeft="@drawable/promotion_icon"
        android:drawableTint="#646464"/>

</androidx.constraintlayout.widget.ConstraintLayout>